<h2>Edit Movie</h2>

<form action="/movies/{{this.allMovies._id}}/edit" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" value="{{this.allMovies.title}}">
    <br>
    <label for="genre">Genre</label>
    <input type="text" name="genre" value="{{this.allMovies.genre}}">
    <br>
    <label for="plot">Plot</label>
    <input type="text" name="plot" value="{{this.allMovies.plot}}">
    <br>
    <label for="cast">Cast</label>
    <select name="cast" multiple>
        {{#each this.allCelebrities}}
        <option value="{{this._id}}"
        {{#if (eq this._id this.allMovies.cast.[0]._id)}}
        selected 
        {{/if}} >
        {{this.name}}
        </option>
        {{/each}}
    </select>
    <br>
    <button>Update</button>
</form>
